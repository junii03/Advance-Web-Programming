{
    "expo": {
        "name": "hbl-mobile",
        "slug": "hbl-mobile",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./src/assets/images/logo.png",
        "scheme": "hblmobile",
        "userInterfaceStyle": "automatic",
        "newArchEnabled": true,
        "ios": {
            "supportsTablet": true,
            "bundleIdentifier": "com.anonymous.hblmobile"
        },
        "android": {
            "adaptiveIcon": {
                "backgroundColor": "#006747",
                "foregroundImage": "./src/assets/images/logo.png"
            },
            "edgeToEdgeEnabled": true,
            "predictiveBackGestureEnabled": false,
            "package": "com.anonymous.hblmobile"
        },
        "web": {
            "output": "static",
            "favicon": "./src/assets/images/logo.png"
        },
        "plugins": [
            "expo-router",
            [
                "expo-splash-screen",
                {
                    "image": "./src/assets/images/logo.png",
                    "imageWidth": 200,
                    "resizeMode": "contain",
                    "backgroundColor": "#f9fafb",
                    "dark": {
                        "backgroundColor": "#121212",
                        "image": "./src/assets/images/logo.png"
                    }
                }
            ]
        ],
        "experiments": {
            "typedRoutes": true,
            "reactCompiler": true
        }
    }
}
